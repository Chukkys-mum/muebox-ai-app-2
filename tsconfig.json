{
  "extends": "./tsconfig/base.json",
  "compilerOptions": {
    "incremental": false,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/d3-custom.d.ts",
    "types/speech-api.d.ts"
  ],
  "exclude": ["node_modules"]
}